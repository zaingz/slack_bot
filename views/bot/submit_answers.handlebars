<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12">
        <h4 class="center-align">Select Users To Send Daily Updates To</h4>
      </div>
    </div>
  </div>

  <div class="section">
    <form id="answer_form" action="/save_answers" method="post">
      <input name="post_id" type="hidden" value="{{post._id}}" />
      {{#each post.team_config.question_set.questions}}
        <div class="row">
          <p><b>{{.}}</b></p>
          <div class="col s6">
            <div class="input-field">
              <input id="q_{{@index}}" name="{{@index}}" type="text" class="validate" value="{{getValue @index ../user_answer.answers}}">
              <label for="q_{{@index}}">Answer</label>
            </div>  
          </div>  
        </div>
      {{/each}}

      <div class="section">
        <button class="btn waves-effect waves-light " type="submit" name="next">Submit</button>
        <div class="clear"></div>
      <div>
    </form>

  </div>
</div>
